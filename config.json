{
	"source": ["tokens/**/*.json"],
	"platforms": {
		"css": {
			"transformGroup": "css",
			"prefix": "figma",
			"buildPath": "build/css/",
			"files": [
				{
					"destination": "variables.css",
					"format": "css/variables"
				}
			]
		},
		"scss": {
			"transformGroup": "scss",
			"prefix": "figma",
			"buildPath": "build/scss/",
			"files": [
				{
					"destination": "_variables.scss",
					"format": "scss/variables"
				}
			]
		}
	}
}
