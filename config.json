{
	"source": ["tokens/**/*.json"],
	"platforms": {
		"css": {
			"options": {
				"basePxFontSize": 14
			},
			"transformGroup": "css",
			"transforms": [
				"attribute/cti",
				"name/cti/kebab",
				"time/seconds",
				"color/css",
				"size/pxToRem",
				"content/icon"
			],
			"buildPath": "build/css/",
			"files": [
				{
					"destination": "variables.css",
					"format": "css/variables"
				}
			]
		},
		"scss": {
			"options": {
				"basePxFontSize": 14
			},
			"transformGroup": "scss",
			"transforms": [
				"attribute/cti",
				"name/cti/kebab",
				"time/seconds",
				"color/css",
				"size/pxToRem",
				"content/icon"
			],
			"buildPath": "build/scss/",
			"files": [
				{
					"destination": "_variables.scss",
					"format": "scss/variables"
				}
			]
		}
	}
}
